<%= form_for(@event, html: { class: "form-horizontal" }) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, { autofocus: true, class: "form-control" } %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" %>Location</label>
    <div class="col-sm-10">
      <input type="text" name="event[location]" class="form-control" placeholder="street address, city, zip or bar name">
    </div>
  </div>

  <div class="form-group">
    <%= f.label :start_time, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :start_time, value: format_time(Time.now), class: "form-control", data: { provide: "datepicker" } %>
    </div>
    <div class="col-sm-4">
      <%= time_select :event, :start_time, { ampm: true, minute_step: 15 }, class: "form-control time-input" %>
    </div>
  </div>


  <div class="form-group">
    <%= f.label :private, "Private Event", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <label class="radio-inline">
        <input type="radio" name="event[private]" id="private1" value="yes" <%= "checked" if @event.private %>> Yes
      </label>
      <label class="radio-inline">
        <input type="radio" name="event[private]" id="private2" value="no" <%= "checked" unless @event.private %>> No
      </label>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
